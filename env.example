# Notion API Configuration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Netlify Blobs Configuration (for file uploads)
# Only needed if automatic configuration fails
# Get these from: https://app.netlify.com/sites/YOUR_SITE/settings/general
NETLIFY_SITE_ID=your_site_id_here
NETLIFY_TOKEN=your_netlify_personal_access_token_here

# SMTP Configuration for Email Notifications (Gmail)
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
